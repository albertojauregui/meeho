<%= form_with(model: event, local: true, html: {class: "form-horizontal"}) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group row">
    <%= form.label :name, :class=>"col-sm-2 col-form-label text-right" %>
    <div class="col-sm-10">
      <%= form.text_field :name, :class=>"form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :start_date, :class=>"col-sm-2 col-form-label text-right" %>
    <div class="col-sm-10">
      <%= form.datetime_select :start_date %>  
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :end_date, :class=>"col-sm-2 col-form-label text-right" %>
    <div class="col-sm-10">
      <%= form.datetime_select :end_date %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :max_students, :class=>"col-sm-2 col-form-label text-right" %>
    <div class="col-sm-10">
      <%= form.number_field :max_students, :class=>"form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :description, :class=>"col-sm-2 col-form-label text-right" %>
    <div class="col-sm-10">
      <%= form.text_area :description, :class=>"form-control" %>
    </div>
  </div>

  <div class="actions">
    <%= form.submit :class=>"btn btn-primary" %>
  </div>
<% end %>
