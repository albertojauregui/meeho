<h1>Register to <%= @event.name %></h1>
<table>
  <thead>
    <tr>
      <th>Email</th>
    </tr>
  </thead>
  <tbody>    
    <% @users_of_events.each do |user| %>
        <tr><td><%= user.email %></td></tr>
    <% end %>
  </tbody>
</table>
<hr>
<%= form_tag controller: "events", action: "register_user", method: :post do %>
  <% if flash[:notice] %>
    <div class="alert alert-info"><%= flash[:notice] %></div>
  <% end %>
  <% if flash[:alert] %>
    <div class="alert alert-danger"><%= flash[:alert] %></div>
  <% end %>
  <%= label_tag "Email" %>
  <%= text_field_tag :email %>

  <%= submit_tag "Registrar usuario" %>
<% end  %>
