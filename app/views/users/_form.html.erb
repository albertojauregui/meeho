<%= form_with(model: user, local: true, html: {class: "form-horizontal"}) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group row">
    <%= form.label :email, :class=>"col-sm-2 col-form-label text-right" %>
    <div class="col-sm-10">
      <%= form.text_field :email, :class=>"form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :first_name, :class=>"col-sm-2 col-form-label text-right" %>
    <div class="col-sm-10">
      <%= form.text_field :first_name, :class=>"form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :last_name, :class=>"col-sm-2 col-form-label text-right" %>
    <div class="col-sm-10">
      <%= form.text_field :last_name, :class=>"form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :date_of_birth, :class=>"col-sm-2 col-form-label text-right" %>
    <div class="col-sm-10">
      <%= form.date_select :date_of_birth, start_year: Date.today.year, end_year: Date.today.year - 100 %>
    </div>
  </div>

  <div class="actions">
    <%= form.submit :class=>"btn btn-primary" %>
  </div>
<% end %>
